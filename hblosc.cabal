            c-blosc/internal-complibs/zstd-1.5.6/decompress/zstd_decompress_block.c

        include-dirs:
            c-blosc
            c-blosc/blosc
            c-blosc/internal-complibs/lz4-1.10.0
            c-blosc/internal-complibs/zlib-1.3.1
            c-blosc/internal-complibs/zstd-1.5.6
            c-blosc/internal-complibs/zstd-1.5.6/common
            c-blosc/internal-complibs/zstd-1.5.6/decompress
            c-blosc/internal-complibs/zstd-1.5.6/compress

        -- -DZSTD_DISABLE_ASM
        cc-options: -DHAVE_LZ4 -DHAVE_ZLIB -DHAVE_ZSTD -fPIC


      -- include-dirs:
      --   c-blosc
      --   c-blosc/blosc
      
      -- install-includes:
      --   c-blosc/blosc/blosc.h
      
    Ghc-Options:      -Wall

test-suite hblosc-test
    -- Import common warning flags.
    import:           warnings

    -- Base language which the package is written in.
    default-language: Haskell2010

    -- Modules included in this executable, other than Main.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- The interface type and version of the test suite.
    type:             exitcode-stdio-1.0

    -- Directories containing source files.
    hs-source-dirs:   test

    -- The entrypoint to the test suite.
    main-is:          Main.hs

    -- Test dependencies.
    build-depends:
        base ^>=4.20.0.0,
        hblosc
        , bytestring
        , hspec